<div id="post_content">
  <h1 class="title"><%= @post.title %></h1>
  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
    <% if user_signed_in? %>
      <% if @post.user == current_user %>
        | <font color="#008CBA"><%= link_to 'Editar', edit_post_path(@post) %></font>
        | <font color="#f44336"><%= link_to 'Excluir', post_path(@post, type: :normal), method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></font>
      <% end %>
    <% end %>
    | <font color="#4CAF50"><%= link_to 'Voltar', posts_path, class: 'btn btn-outline-primary' %></font>
  </p><br>

  <div class='conteudo'>
    <% if @post.image.exists? %>
      <div class='imagem'>
        <%= image_tag @post.image.url(:medium) %>
      </div>
    <% end %>
    <%= @post.content %>
  </div><br><br>

  <%= render "comments/index", commentable: @post %>
</div>