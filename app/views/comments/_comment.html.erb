<li class='comment'>
	
	<p class="comment_body"><%= comment.body %>&nbsp&nbsp<small class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</small><br/>
	<small>Enviador por <%= comment.user.name %></small><br>
	<button class="buttonactions buttonactions1"><%= link_to 'Responder', new_comment_comment_path(comment), class: 'btn btn-default btn-xs' %></button>
	<% if can? :update, comment %>
		<button class="buttonactions buttonactions3"><%= link_to "Excluir", [comment.post, comment, type: :normal], method: :delete, data: { confirm: "VocÃª tem certeza?" }, class: 'btn btn-default btn-xs' %></button>
		<button class="buttonactions buttonactions2"><%= link_to 'Editar', edit_comment_comment_path(comment), class: 'btn btn-default btn-xs' %></button></p>
	<% end %>
	
	<% unless comment.comments.empty? %>
		<ul class="comment_list">
	 		<%= render(partial: 'comments/comment', collection: comment.comments) %>
		</ul>
	<% end %>
</li>